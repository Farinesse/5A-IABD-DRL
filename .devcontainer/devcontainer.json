{
  "name": "my-project-devcontainer",
  "image": "mcr.microsoft.com/devcontainers/base:ubuntu",
  "features": {
    "ghcr.io/devcontainers/features/desktop-lite:1": {
      "forwardPorts": [6080],
      "portsAttributes": {
        "6080": {
          "label": "desktop"
        }
      },
      "runArgs": ["--shm-size=1g"]
    }
  }
}
